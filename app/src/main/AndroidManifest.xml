<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ariel.actiongroups">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.common.challenges.challenge_navigator.view.ChallengeNavigationActivity" />
        <activity android:name=".main.leader.challenges.challengecreator.view.ChallengesCreatorActivity" />
        <activity android:name=".main.common.groups.groups_list.GroupsListActivity" />
        <activity android:name=".main.common.home_page.HomePage"/>
        <activity android:name=".main.common.groups.group_info.GroupInfoActivity" />
        <activity android:name=".main.leader.groups.creation.view.GroupCreatorActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".main.common.utils.abstractions.ViewPagerActivity" />
    </application>

</manifest>