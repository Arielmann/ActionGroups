<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Silence Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/silenceGroupTV"
        android:layout_alignBaseline="@+id/silenceSwitch"
        android:layout_alignBottom="@+id/silenceSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/silenceSwitch"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <include layout="@layout/compo_boundary_line"
    android:layout_height="@dimen/boundary_height"
    android:layout_width="match_parent"
    android:layout_below="@+id/silenceSwitch"/>

</RelativeLayout>