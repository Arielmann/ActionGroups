<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courseOverviewLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ariel.actiongroups.main.leader.course.creator.view.CourseOverviewActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/addChallenge"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/headline"
        android:layout_toEndOf="@+id/headline" />

    <Button
        android:text="Save Course!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/saveChallenge"
        android:layout_alignTop="@+id/addChallenge"
        android:layout_toLeftOf="@+id/addChallenge"
        android:layout_toStartOf="@+id/addChallenge" />

        <TextView
            android:text="Get in shape course"
            android:textColor="@color/md_black_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headline"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

         <android.support.v7.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/recyclerView"
             android:transcriptMode="normal"
             android:layout_alignParentTop="false"
             android:layout_alignParentLeft="false"
             android:layout_alignParentRight="true"
             />
</RelativeLayout>
</layout>