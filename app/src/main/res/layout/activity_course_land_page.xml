<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gather_payment"
    tools:context=".main.common.courses.states.gatherpayment.view.GatherPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stylistImageInDetailsScreen"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="center"
                        android:src="@drawable/running_lions"/>

                    <ImageView
                        android:id="@+id/greyLayerInDetailsScreen"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="center"
                        android:src="@drawable/grey_layer"/>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/stylistCircularProfileImageInStylistDetailsScreen"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="181dp"
                        android:src="@drawable/running_lions" />
                </FrameLayout>

                <TextView
                    android:id="@+id/courseNameInDetailsScreenTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Course Name"
                    android:textColor="@color/course_Details_color"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/leaderNameInDetailsScreenTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Leader name"
                    android:textColor="@color/course_Details_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/descriptionInDetailsScreenTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Course Description"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/course_Details_color" />


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:orientation="vertical">

            <Button
                android:id="@+id/goToNextCourseStateActivityButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Join Course"

                />
        </LinearLayout>

    </LinearLayout>

</layout>